<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".PostActivity"
    android:padding="10dp">

    <!-- Name Label -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/inputtitle">
        <EditText android:id="@+id/input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Title" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/inputcost"
        android:layout_below="@+id/inputadress">
        <EditText android:id="@+id/input_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="cost" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/inputadress"
        android:layout_below="@+id/inputtitle">

        <EditText
            android:id="@+id/input_adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/picked_img"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_above="@+id/post_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="23dp"
        android:background="@android:color/transparent"
        android:contentDescription=""
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/add_"
        android:text="pic image"
        tools:ignore="ContentDescription" />

    

    <Button
        android:id="@+id/post_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:text="ADD RESORT"
        android:textColor="#FFFFFF" />


</RelativeLayout>